<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">

	<properties>
		<Property name="name">/home/webmaster/karajan/logs/castanet/$${date:yyyy}/$${date:MM}/$${date:dd}</Property>
	</properties>

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</Console>

		<RollingFile name="FILE" append="true"
			fileName="CASTANETS/castanet.log"
			filePattern="/home/webmaster/was-demo/logs/castanet/$${date:yyyy}/$${date:MM}/$${date:dd}/castanetDemo.log.%i">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="20 MB" />
			</Policies>
			<DefaultRolloverStrategy max="100" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="org.springframework" level="info">
			<AppenderRef ref="FILE" />
		</Logger>
		<Logger name="org.mybatis" level="info">
			<AppenderRef ref="FILE" />
		</Logger>
		<Logger name="java.sql.Connection" level="info">
			<AppenderRef ref="FILE" />
		</Logger>
		<Logger name="java.sqlPreparedStatement" level="info">
			<AppenderRef ref="FILE" />
		</Logger>
		<Logger name="java.sqlPreparedStatement" level="info">
			<AppenderRef ref="FILE" />
		</Logger>
		<Logger name="castanet" level="info">
			<AppenderRef ref="FILE" />
		</Logger>

		<Root level="info">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>

</Configuration>